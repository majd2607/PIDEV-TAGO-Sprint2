{% extends 'baseBack.html.twig' %}

{% block title %}Reclamation index
{% endblock %}

{% block body %}
	<h1>Reclamation index</h1>

	<table class="table" style="margin-top: 300px;">
		<thead>
			<tr>
				<th>Id</th>
				<th>TypePanne</th>
				<th>Statu</th>
				<th>DescriptionRec</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reclamation in reclamations %}
				<tr>
					<td>{{ reclamation.id }}</td>
					<td>{{ reclamation.typePanne }}</td>
					<td>{{ reclamation.statu }}</td>
					<td>{{ reclamation.descriptionRec }}</td>
					<td>
						<a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
						<a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_reclamation_new') }}">Create new</a>
{% endblock %}
