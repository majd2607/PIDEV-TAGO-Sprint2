{% extends 'baseBack.html.twig' %}

{% block title %}Reclamations index
{% endblock %}

{% block body %}
	<div class="container-xxl flex-grow-1 container-p-y">
		<h4 class="fw-bold">
			Liste des reclamations
		</h4>
		<a type="button" class="btn btn-primary mb-3" href="{{ path('app_reclamations_new') }}">Create new</a>

		<div class="card">
			<div class="table-responsive text-nowrap">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Idvehicule</th>
							<th>Type</th>
							<th>Date</th>
							<th>Description</th>
							<th>Archive</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody class="table-border-bottom-0">
						{% for reclamation in reclamations %}
							<tr>
								<td>{{ reclamation.id }}</td>
								<td>{{ reclamation.idvehicule }}</td>
								<td>{{ reclamation.type }}</td>
								<td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
								<td>{{ reclamation.description }}</td>
								<td>{{ reclamation.archive ? 'Yes' : 'No' }}</td>
								<td>
									<div class="dropdown">
										<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
											<i class="bx bx-dots-vertical-rounded"></i>
										</button>
										<div class="dropdown-menu">
											<a class="dropdown-item" href="{{ path('app_reclamations_show', {'id': reclamation.id}) }}">Show</a>
											<a class="dropdown-item" href="{{ path('app_reclamations_edit', {'id': reclamation.id}) }}">Edit</a>


										</div>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="21">No records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

	</div>


{% endblock %}
