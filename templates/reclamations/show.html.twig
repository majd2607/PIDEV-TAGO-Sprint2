{% extends 'baseBack.html.twig' %}

{% block title %}Reclamations
{% endblock %}

{% block body %}
	<h1>Reclamations</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ reclamation.id }}</td>
			</tr>
			<tr>
				<th>Idvehicule</th>
				<td>{{ reclamation.idvehicule }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ reclamation.type }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ reclamation.description }}</td>
			</tr>
			<tr>
				<th>Archive</th>
				<td>{{ reclamation.archive ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_reclamations_index') }}">back to list</a>

	<a href="{{ path('app_reclamations_edit', {'id': reclamation.id}) }}">edit</a>

	{{ include('reclamations/_delete_form.html.twig') }}
{% endblock %}
